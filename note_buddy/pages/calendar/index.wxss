.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 日历网格基础样式 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-top: 20rpx;
}

.day-cell {
  aspect-ratio: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}


.notification-item {
  display: block;
  padding: 10rpx;
  margin: 5rpx 0;
}

.month-header {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.add-notification-btn {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #07C160;
  color: white;
  border-radius: 50%;
  font-size: 32rpx;
}

.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}