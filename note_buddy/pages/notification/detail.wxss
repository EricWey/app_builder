.container {
  padding: 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.date {
  font-size: 18px;
  font-weight: bold;
}

.back-btn {
  color: #1890ff;
  font-size: 16px;
}

.notification-item {
  padding: 15px;
  margin-bottom: 15px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.subject {
  font-size: 16px;
  font-weight: bold;
  display: block;
  margin-bottom: 8px;
  color: #333;
}

.content {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}